# Configuración del Servidor
PORT=3000
NODE_ENV=production

# Base de Datos MySQL (Plesk)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=eventu_db
DB_USER=eventu_user
DB_PASSWORD=tu_password_aqui

# JWT Secret (para autenticación)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d

# CORS - Orígenes permitidos (separados por comas)
CORS_ORIGIN=https://eventu.co,https://www.eventu.co,https://app.eventu.co

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WordPress/Plesk - Misma base de datos MySQL
# El backend se conecta directamente a MySQL donde está WordPress

# API Base URL
API_BASE_URL=https://api.eventu.co

